@{
    ViewData["Title"] = "Home Page";
}
<div class="container">
    <!-- Background video -->
    <video autoplay loop muted class="background-clip">
        <source src="~/background/green-field.3840x2160.mp4" type="video/mp4" />
    </video>

    <div class="container">
        <h1>Welcome to Agri-Energy Connect</h1>

        <div class="card-grid">
            <div class="card green">
                <h2><span></span> Renewable Energy</h2>
                <p>Access sustainable energy solutions for your farm</p>
            </div>

            <div class="card blue">
                <h2><span></span> Water Conservation</h2>
                <p>Discover water-saving techniques and technologies</p>
            </div>

            <div class="card yellow">
                <h2><span></span> Training Resources</h2>
                <p>Learn about sustainable farming practices</p>
            </div>

            <div class="card purple">
                <h2><span></span> Community</h2>
                <p>Connect with other farmers and energy experts</p>
            </div>
            <form asp-action="loginView" asp-controller="account" method="get">
                <button type="submit" class="btn btn-primary">To view the rest of the website, please log in</button>
            </form>
        </div>
    </div>

</div>     