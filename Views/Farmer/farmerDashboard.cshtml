@model ST10254164_LukeC_GR2_PROG7311_A2.Models.farmerDashboardModel

@{
    ViewData["Title"] = "Farmer Dashboard";
}
<h1>Farmer Dashboard</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

<div class="bg-white p-4 rounded shadow-sm">

    <h3 class="card-title">Add New Product</h3>
    <p class="card-text">Add your products to the platform</p>
    <a asp-action="addProductView" class="btn btn-primary mb-3">Add Product</a>
    <br />

    <section id="farmer-products">
        <h2>My Product Listings</h2>
        @if (Model.MyProducts != null && Model.MyProducts.Any())
        {
            <table class="table table-striped table-hover align-middle">
                <thead>
                    <tr>
                        <th>Product Name</th>
                        <th>Category</th>
                        <th>Production Date</th>
                        <th>Added Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model.MyProducts)
                    {
                        <tr>
                            <td>@product.Name</td>
                            <td>@product.Category</td>
                            <td>@product.ProductionDate.ToString("yyyy-MM-dd")</td>
                            <td>@product.AddedDate.ToString("yyyy-MM-dd HH:mm")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-center text-muted">No products added</p>
        }
    </section>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
