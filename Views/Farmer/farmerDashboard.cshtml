@{
    ViewData["Title"] = "Farmer Dashboard";
}


   

    <div class="dashboard-container">
        <h1 class="text-center mb-4">Farmer dashboard</h1>
        <div class="row">
            <div class="col-md-6 mb-4">
                <div class="card green">
                    <div class="card-body">
                        <h3 class="card-title">Add New Product</h3>
                        <p class="card-text">Add your products to the platform</p>
                        <a asp-controller="farmer" asp-action="addProductView" class="btn btn-primary">Add Product</a>
                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-4">
                <div class="card blue">
                    <div class="card-body">
                        <h3 class="card-title">My Products</h3>
                        <p class="card-text">View your product listings</p>
                        <a asp-controller="farmer" asp-action="viewProducts" class="btn btn-primary">View My Products</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
