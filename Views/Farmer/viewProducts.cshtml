@model IEnumerable<ST10254164_LukeC_GR2_PROG7311_A2.Models.employeeModel>
    @{
    ViewData["Title"] = "View products";
}
<h3> View Products</h3>

<body>

    <div class="container">
        <!-- Background video -->
        <video autoplay loop muted class="background-clip">
            <source src="~/background/green-field.3840x2160.mp4" type="video/mp4" />
        </video>

        <!-- View Container -->
        <div class="view-container bg-white p-5 rounded shadow" style="margin-top: 100px;">
            <h1 class="text-center mb-4">View Claims</h1>

            @if (!Model.Any())
            {
                <div class="alert alert-info text-center" role="alert">
                    No products exist yet, please add a product to see it here.
                </div>
            }
            else
            {
                <!-- products Table -->
                <table class="table table-striped table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>product Name</th>
                            <th>product Creation Date</th>
                            <th>farmer</th>
                            <th>product added date</th>
                            <th>Category</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr>
                                <td>@product.productName</td>
                                <td>@product.farmerName</td>
                                <td>@product.productCreationDate.ToShortDateString()</td>
                                <td>@product.Category</td>
                               <td>@product.dateAdded </td>
                               
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</body>
