@model IEnumerable<ST10254164_LukeC_GR2_PROG7311_A2.Models.productModel>
    @{
    ViewData["Title"] = "View products";
}
<h3> View Products</h3>

<body>

        <!-- View Container -->
        <div class="view-container" style="margin-top: 100px;">
            

            @if (!Model.Any())
            {
                <div class="alert alert-info text-center" role="alert">
                    No products exist yet, please add a product to see it here.
                </div>
            }
            else
            {
                <!-- products Table -->
                <table class="table table-striped table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            
                            <th>product Name</th>
                            <th>Farmer Name</th>
                            <th>Date Added</th>
                            <th>product Creation Date</th>
                            <th>Category</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr>
                                
                                <td>@product.productName</td>
                                <td>@product.farmerName</td>
                                <td>@product.dateAdded.ToShortDateString()</td>
                                <td>@product.productCreationDate.ToShortDateString()</td>
                                <td>@product.Category</td>
                               
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>

</body>
